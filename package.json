    "@mcansh/eslint-config": "2.7.3",
    "@next/eslint-plugin-next": "9.4.5-canary.28",
    "@testing-library/jest-dom": "5.11.0",
    "@testing-library/react": "10.4.4",
    "@types/he": "1.1.1",
    "@types/jest": "26.0.3",
    "@types/node": "14.0.14",
